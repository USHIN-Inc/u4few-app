{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es6",
        "baseUrl": "./",
    },
    "include": [
        "*",
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}